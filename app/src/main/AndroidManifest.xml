<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quik.baskt">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuikBaskt">
        <activity android:name=".cashPaymentAuthorise"></activity>
        <activity android:name=".checkBill" />
        <activity android:name=".OnlinePaymentUser" />
        <activity android:name=".CashPaymentUser" />
        <activity android:name=".ModeofPayment" />
        <activity android:name=".Bill_generation" />
        <activity android:name=".EditItem" />
        <activity android:name=".AddItem" />
        <activity android:name=".AdminPanel" />
        <activity android:name=".MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserHome" />
        <activity
            android:name=".CaptureClass"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>